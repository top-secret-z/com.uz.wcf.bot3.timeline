<?xml version="1.0" encoding="UTF-8"?>
<package name="de.softcreatr.wcf.bot3.timeline" xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com https://www.woltlab.com/XSD/2019/package.xsd">
    <packageinformation>
        <packagename>Community Bot 3 - Timeline Extension</packagename>
        <packagedescription>Adds Timeline functions to Community Bot 3</packagedescription>
        <packagename language="de">Community Bot 3 - Chronik-Erweiterung</packagename>
        <packagedescription language="de">Erweitert Community Bot 3 um Chronik-Funktionen</packagedescription>
        <version>5.5.2</version>
        <date>2022-09-18</date>
        <license><![CDATA[LGPL <https://opensource.org/licenses/lgpl-license.php>]]></license>
    </packageinformation>

    <authorinformation>
        <author><![CDATA[SoftCreatR.dev]]></author>
        <authorurl><![CDATA[https://softcreatr.dev]]></authorurl>
    </authorinformation>

    <requiredpackages>
        <requiredpackage minversion="5.4.0">de.softcreatr.wcf.bot3</requiredpackage>
        <requiredpackage minversion="5.2.0">de.darkwood-studios.timeline</requiredpackage>
        <requiredpackage minversion="5.4.0">com.woltlab.wcf</requiredpackage>
    </requiredpackages>

    <excludedpackages>
        <excludedpackage version="5.6.0 Alpha 1">com.woltlab.wcf</excludedpackage>
        <excludedpackage version="*">com.uz.wcf.bot3.timeline</excludedpackage>
    </excludedpackages>

    <instructions type="install">
        <instruction type="file" application="timeline" />
        <instruction type="language" />
        <instruction type="acpTemplate" application="timeline" />
        <instruction type="templateListener" />
        <instruction type="uzbotNotify" />
    </instructions>

    <instructions type="update" fromversion="5.3.*">
        <instruction type="file" application="timeline" />
    </instructions>

    <instructions type="update" fromversion="5.4.*">
        <instruction type="file" application="timeline" />
    </instructions>

    <instructions type="update" fromversion="5.5.0">
        <instruction type="file" application="timeline" />
    </instructions>

    <instructions type="update" fromversion="5.5.1">
        <instruction type="file" application="timeline" />
        <instruction type="language" />
        <instruction type="acpTemplate" application="timeline" />
        <instruction type="templateListener" />
        <instruction type="uzbotNotify" />
    </instructions>
</package>
